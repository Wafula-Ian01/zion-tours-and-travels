// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model TravelPackage {
  id              String           @id @default(uuid())
  title           String
  description     String
  price           String
  duration        String
  image           String           // Base64 encoded image
  category        String
  details         String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  bookingInquiries BookingInquiry[]

  @@map("travel_packages")
}

model BlogArticle {
  id        String   @id @default(uuid())
  title     String
  excerpt   String
  content   String
  image     String   // Base64 encoded image
  date      DateTime
  author    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blog_articles")
}

model GalleryImage {
  id          String   @id @default(uuid())
  url         String   // Base64 encoded image
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("gallery_images")
}

model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("faqs")
}

model Partner {
  id        String   @id @default(uuid())
  name      String
  logo      String   // Base64 encoded image
  type      String   // 'accommodation' | 'certification'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("partners")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Creditation {
  id        String   @id @default(uuid())
  name      String
  icon      String   // Lucide icon name
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("creditations")
}

model ContactSubmission {
  id          String   @id @default(uuid())
  name        String
  email       String
  phone       String
  message     String
  submittedAt DateTime @default(now())
  status      String   @default("new") // 'new' | 'read' | 'responded'

  @@map("contact_submissions")
}

model BookingInquiry {
  id              String        @id @default(uuid())
  packageId       String
  packageTitle    String
  customerName    String
  email           String
  phone           String
  preferredDate   String
  numberOfPeople  Int
  specialRequests String?
  submittedAt     DateTime      @default(now())
  status          String        @default("pending") // 'pending' | 'confirmed' | 'cancelled'
  package         TravelPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@map("booking_inquiries")
}

model CMSSettings {
  id             String   @id @default(uuid())
  companyName    String
  companyEmail   String
  companyPhone   String
  whatsappNumber String
  aboutContent   String
  facebook       String?
  instagram      String?
  twitter        String?
  linkedin       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("cms_settings")
}

model AdminUser {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String   // Hashed password
  role      String   @default("editor") // 'admin' | 'editor'
  createdAt DateTime @default(now())
  lastLogin DateTime @default(now())

  @@map("admin_users")
}
